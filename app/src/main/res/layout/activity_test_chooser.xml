<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.TestChooser"
    style="@style/window">

    <android.support.v7.widget.Toolbar
        android:id="@+id/save_toolbar"
        style="@style/toolbar_style"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <TextView
        android:id="@+id/test_chooser_title"
        style="@style/h3_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/save_toolbar"
        android:layout_centerHorizontal="true"
        android:text="@string/chooser_label_text" />

    <ListView
        android:id="@+id/listView"
        style="@style/downloaded_test_list_style"
        android:layout_below="@id/test_chooser_title"/>

</RelativeLayout>